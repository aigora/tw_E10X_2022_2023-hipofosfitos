#include <stdio.h>
#include <math.h>

float calcularMedia(int arr[], int n) {
    int sum = 0;
    int i;

    for (i = 0; i < n; i++) {
        sum += arr[i];
    }

    return (float)sum / n;
}

float calcularModa(int arr[], int n) {
    int maxCount = 0;
    int mode = 0;
    int i, j;

    for (i = 0; i < n; i++) {
        int count = 0;

        for (j = 0; j < n; j++) {
            if (arr[j] == arr[i]) {
                count++;
            }
        }

        if (count > maxCount) {
            maxCount = count;
            mode = arr[i];
        }
    }

    return mode;
}

float calcularVarianza(int arr[], int n) {
    float mean = calcularMedia(arr, n);
    float sum = 0;
    int i;

    for (i = 0; i < n; i++) {
        sum += pow(arr[i] - mean, 2);
    }

    return sum / n;
}

int main() {
    int vector[23] = {9, 4, 7, 1, 6, 2, 8, 5, 3, 10, 15, 12, 14, 11, 13, 20, 17, 19, 16, 23, 22, 21, 18};
    int size = sizeof(vector) / sizeof(vector[0]);

    float media = calcularMedia(vector, size);
    float moda = calcularModa(vector, size);
    float varianza = calcularVarianza(vector, size);

    printf("Vector:\n");
    for (int i = 0; i < size; i++) {
        printf("%d ", vector[i]);
    }
    printf("\n\n");

    printf("Media: %.2f\n", media);
    printf("Moda: %.2f\n", moda);
    printf("Varianza: %.2f\n", varianza);

    return 0;
}
